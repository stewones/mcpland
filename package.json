{
  "name": "mcpland",
  "version": "0.0.5",
  "private": false,
  "type": "module",
  "description": "Building blocks for implementing Model Context Protocol tools.",
  "bin": {
    "mcp": "./src/bin.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stewones/mcpland.git"
  },
  "scripts": {
    "dev": "bun build src/index.ts --outdir ./dist --target bun --watch",
    "build": "bun run format && bun run ./scripts/build.ts",
    "build:prod": "bun run format && bun run ./scripts/build.ts --minify",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "coverage": "vitest run --coverage && open coverage/index.html",
    "format": "format-imports ./src --config=./import.json && format-imports ./test --config=./import.json"
  },
  "exports": {
    "./core": {
      "types": "./types/core/index.d.ts",
      "default": "./core/index.js"
    },
    "./lib": {
      "types": "./types/lib/index.d.ts",
      "default": "./lib/index.js"
    },
    "./stdio": {
      "types": "./types/stdio.d.ts",
      "default": "./stdio.js"
    },
    "./bin": {
      "types": "./types/bin/index.d.ts",
      "default": "./bin.js"
    }
  },
  "files": [
    "stdio.js",
    "stdio.js.map",
    "bin.js",
    "bin.js.map",
    "core",
    "lib",
    "types",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@ai-sdk/openai": "^2.0.5",
    "@clack/prompts": "^0.11.0",
    "@modelcontextprotocol/sdk": "^1.10.2",
    "ai": "^5.0.8",
    "figlet": "^1.8.2",
    "picocolors": "^1.1.1",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.23.3"
  },
  "devDependencies": {
    "@types/bun": "^1.2.21",
    "@types/figlet": "^1.7.0",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "dedent": "^1.6.0",
    "format-imports": "^4.0.8",
    "typescript": "^5.9.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
